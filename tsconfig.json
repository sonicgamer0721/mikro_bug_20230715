{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["./app/**/*"],
  "exclude": ["node_modules"],
}
